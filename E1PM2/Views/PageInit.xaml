<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E1PM2.Views.PageInit"
             Title="PageInit">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="Latitude" Placeholder="Ingrese latitud" Keyboard="Numeric"/>

        <Entry x:Name="Longitud" Placeholder="Ingrese Longitud" Keyboard="Numeric"/>


        <Button x:Name="btnAgregar"  Clicked="btnAgregar_Clicked"/>
        
        <Button x:Name="btnLista"  Clicked="btnLista_Clicked"/>
        <Button x:Name="btnSalir"  Clicked="btnSalir_Clicked"/>

    </VerticalStackLayout>
</ContentPage>